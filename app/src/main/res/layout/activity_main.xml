<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/biljkeRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/botanickeFunkcionalnosti"
        tools:layout_editor_absoluteX="1dp"
        />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTintMode="screen"
        android:textColor="@color/white"
        android:background="#C3849A"
        android:text="@string/reset"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/novaBiljkaBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/modSpinner"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/roza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/resetBtn"
        app:layout_constraintEnd_toStartOf="@id/resetBtn"/>

    <Button
        android:id="@+id/novaBiljkaBtn"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTintMode="screen"
        android:textColor="@color/white"
        android:background="#C3849A"
        android:textSize="12sp"
        android:text="@string/dodaj"
        app:layout_constraintStart_toEndOf="@id/modSpinner"
        app:layout_constraintEnd_toStartOf="@id/resetBtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="4dp" />

    <LinearLayout
        android:id="@+id/botanickeFunkcionalnosti"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/lila"
        app:layout_constraintTop_toBottomOf="@id/modSpinner"
        app:layout_constraintBottom_toTopOf="@id/biljkeRV"
        >

        <EditText
            android:id="@+id/pretragaET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="14sp"
            android:inputType="text"
            android:hint="@string/unospretrage"/>

        <Spinner
            android:id="@+id/bojaSPIN"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/brzaPretraga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="@string/pretraga"
            android:textColor="@color/white"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>